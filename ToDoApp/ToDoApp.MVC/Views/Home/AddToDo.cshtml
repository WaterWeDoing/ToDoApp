@{
    ViewData["Title"] = "AddToDo";
}
@model ToDoModel
<h1>Add To-Do</h1>
<br />
<br />
<form id="AddToDoForm" asp-action="AddToDo" method="post">
    <label>To-Do Name</label>
    <br />
    <input type="text" asp-for="Name" placeholder="Enter Task Name Here...." />
    <br />
    <br />
    <label>Prioriry Level</label>
    <br />
    <select class="form-select; colspan-3" asp-for="Priority" aria-label="PriorityLevel">
        <option selected value="1">One (High)</option>
        <option value="2">Two (Medium)</option>
        <option value="3">Three (Low)</option>
    </select>
    <Br />
    <br />
    <label>Deadline Date</label>
    <br />
    <input type="date" asp-for="Deadline" name="trip-start"
           value="2018-07-22"
           min="2018-01-01" max="2018-12-31">
    <br />
    <Br />
    <label for="exampleFormControlTextarea1" class="form-label"></label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Save To-Do</button>
</form>