<header class="mb-3 mt-3"><h1 class="text-center"></h1></header>
<form id="EditTaskForm" asp-action="UpdateTask" method="post">
    @Html.HiddenFor(t=>t.ToDo.ToDoId)
    @Html.HiddenFor(t=>t.task.TaskId)
