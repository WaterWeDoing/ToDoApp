    <div class="mb-3">
        <label asp-for="task.Name" class="form-label">New Task Name</label>
        <input class="form-control" asp-for="task.Name">
        <span asp-validation-for="task.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label  class="form-label">New Priority</label>
        <select class="form-select" asp-for="task.Priority">
            <option selected value="1">One (High)</option>
            <option value="2">Two (Medium)</option>
            <option value="3">Three (Low)</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="task.Deadline">New DeadLine</label>
        <input type="date" class="form-control" asp-for="task.Deadline"
               value="@DateTime.Today.ToString("yyyy-MM-dd")"
               min="@DateTime.Today.ToString("yyyy-MM-dd")">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
